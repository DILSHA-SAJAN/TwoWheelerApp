<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/tv_viewdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_black_border"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/rubik_medium"
                android:text="View Details"
                android:textSize="14sp"
                android:textColor="#2F3D4A" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_custID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_light"
                android:text="Dealer Name"
                android:textSize="12dp"
                android:textColor="#464646" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/tv_cust_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Abhishek V Menon"
                android:textSize="15dp"
                android:textColor="#2F2F2F" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            >

            <TextView
                android:id="@+id/tv_quotAMount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="â‚¹30,000"
                android:textSize="13dp"
                android:textColor="#25CE16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/rubik_light"
                android:text="Requested Amount"
                android:textSize="12dp"
                android:textColor="#9D9D9D"
                android:paddingLeft="8dp" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:src="@drawable/line_36"/>

        </LinearLayout>




    </RelativeLayout>
</layout>
