<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFDBB6"
        android:orientation="vertical"
        tools:context=".activity.AddDealerDocumentActivity">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back_button_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/rubik_bold"
                android:gravity="center"
                android:text="Dealer Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:background="@drawable/bg_white_topcorner">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/view_attachments"
                        android:textColor="#818181"
                        android:textSize="16dp"
                        android:visibility="gone"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/line_36"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_question"
                            android:layout_width="186dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/view_black_border"
                            android:fontFamily="@font/rubik_medium"
                            android:gravity="center"
                            android:padding="12dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/view_questionnaire"
                            android:textColor="#2F3D4A"
                            android:textSize="16dp">

                        </TextView>
                        <ImageView
                            android:id="@+id/question_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            />
                        <TextView
                            android:id="@+id/question_imageid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#505050"
                            android:textSize="16dp"
                            android:visibility="gone"
                            />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_spinner_img"
                            android:fontFamily="@font/rubik_variable_font_wght"
                            android:prompt="@string/select_questionnaire"
                            android:spinnerMode="dialog" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radio_bg" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:text="Verified"
                            android:textColor="#818181"
                            android:textSize="16dp" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="36dp"
                            android:button="@drawable/radio_bg" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:text="Rejected"
                            android:textColor="#818181"
                            android:textSize="16dp" />
                    </RadioGroup>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                      >

                        <TextView
                            android:id="@+id/tv_addAadhar"
                            android:layout_width="186dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/view_black_border"
                            android:fontFamily="@font/rubik_medium"
                            android:gravity="center"
                            android:padding="12dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/add_aadhaar_card"
                            android:textColor="#2F3D4A"
                            android:textSize="16dp">

                        </TextView>


                        <ImageView
                            android:id="@+id/aadhar_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                           />
                        <TextView
                            android:id="@+id/adhar_imageid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#505050"
                            android:textSize="16dp"
                            android:visibility="gone"
                            />


                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_addPan"
                                android:layout_width="146dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:background="@drawable/view_black_border"
                                android:fontFamily="@font/rubik_medium"
                                android:gravity="center"
                                android:padding="12dp"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="12dp"
                                android:text="@string/add_pan_card"
                                android:textColor="#2F3D4A"
                                android:textSize="16dp" />




                            <ImageView
                                android:id="@+id/pan_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:padding="12dp" />
                            <TextView
                                android:id="@+id/pan_imageid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="50dp"
                                android:textColor="#505050"
                                android:textSize="16dp"
                                android:visibility="gone"
                                />

                        </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/upload_bank_statement"
                            android:textColor="#818181"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/line_36" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dividerPadding="5sp">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="@string/upload_bank_statement">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/rubik_variable_font_wght"
                                    android:textSize="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/tv_chooseBank"
                                android:layout_width="90dp"
                                android:layout_height="48dp"
                                android:layout_weight="0"
                                android:background="@drawable/curved_rectangle_button"
                                android:fontFamily="@font/rubik_variable_font_wght"
                                android:gravity="center"
                                android:text="@string/choose_file"
                                android:textColor="@color/white" />
                        </LinearLayout>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                          <ImageView
                              android:id="@+id/bank_image"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"

                              />
                          <TextView
                              android:id="@+id/bank_imageid"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"

                              android:textColor="#505050"
                              android:textSize="16dp"
                              android:visibility="gone"
                              />
                      </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/upload_agreement"
                            android:textColor="#818181"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/line_36" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dividerPadding="5sp">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="@string/upload_agreement">

                                <com.google.android.material.textfield.TextInputEditText

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/rubik_variable_font_wght"
                                    android:textSize="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:id="@+id/tv_chooseAgreement"
                                android:layout_width="90dp"
                                android:layout_height="48dp"
                                android:layout_weight="0"
                                android:background="@drawable/curved_rectangle_button"
                                android:fontFamily="@font/rubik_variable_font_wght"
                                android:gravity="center"
                                android:text="@string/choose_file"
                                android:textColor="@color/white" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/agree_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                />
                            <TextView
                                android:id="@+id/agree_imageid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textColor="#505050"
                                android:textSize="16dp"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/rubik_regular"
                            android:text="Gold Backed"
                            android:textColor="#818181"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/line_36" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_gb_yes"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:background="@drawable/curved_black_button"
                                android:fontFamily="@font/rubik_variable_font_wght"
                                android:gravity="center"
                                android:text="Yes"
                                android:textColor="@color/white"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tv_gb_no"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="16dp"
                                android:background="@drawable/view_black_border"
                                android:fontFamily="@font/rubik_medium"
                                android:gravity="center"
                                android:padding="12dp"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="12dp"
                                android:text="No"
                                android:textColor="#2F3D4A"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:dividerPadding="5sp">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/upload_pledge_form">

                            <com.google.android.material.textfield.TextInputEditText

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:focusable="false"
                                android:fontFamily="@font/rubik_variable_font_wght"
                                android:textSize="16dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/tv_choosePledge"
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:layout_weight="0"
                            android:background="@drawable/curved_rectangle_button"
                            android:fontFamily="@font/rubik_variable_font_wght"
                            android:gravity="center"
                            android:text="@string/choose_file"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/pledge_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />
                        <TextView
                            android:id="@+id/pledge_imageid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="#505050"
                            android:textSize="16dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="34dp"
                        android:layout_marginBottom="34dp">

                        <TextView
                            android:id="@+id/tv_addDocs"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_confirm"
                            android:fontFamily="@font/rubik_bold"
                            android:gravity="center"
                            android:text="Confirm"
                            android:textColor="@color/white" />

                    </RelativeLayout>


                </LinearLayout>

            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</layout>